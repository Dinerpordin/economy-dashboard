# Alpha Vantage API Key (for US/Global market data)
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# World Bank API (no key required, but you can add custom endpoint if needed)
WORLD_BANK_API_URL=https://api.worldbank.org/v2

# Bangladesh Stock Exchange API
# Using bd-stock-api (GitHub: https://github.com/Baipyrus/bd-stock-api)
BD_STOCK_API_URL=https://bd-stock-api.vercel.app/v1

# Trading Economics API (optional - requires subscription)
# TRADING_ECONOMICS_API_KEY=your_trading_economics_key_here
# TRADING_ECONOMICS_API_URL=https://api.tradingeconomics.com

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Data Refresh Interval (in milliseconds)
DATA_REFRESH_INTERVAL=300000

# Cache Duration (in seconds)
CACHE_DURATION=300
